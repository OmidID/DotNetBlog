@using DotNetBlog.Web.Areas.Account.Models.Home
@model LoginViewModel

<div class="login-box">
    <div class="login-logo">
        <a asp-action="Index" asp-controller="Home" asp-area="Web"><b>DotNet</b>Blog</a>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">登录博客</p>

        <div class="alert alert-danger" condition="Model.ErrorMessage != null">
            @Model.ErrorMessage
        </div>

        <form novalidate asp-action="Login" asp-controller="Home" asp-antiforgery="true" method="post">
            <div class="form-group has-feedback">
                <input name="UserName" type="text" class="form-control" placeholder="请输入用户名" required value="@Model.Model.UserName">
                <span class="form-control-feedback">
                    <i class="fa fa-user"></i>
                </span>
            </div>
            <div class="form-group has-feedback">
                <input name="Password" type="password" class="form-control" placeholder="请输入密码" required>
                <span class="form-control-feedback">
                    <i class="fa fa-lock"></i>
                </span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox">
                        <label class="">                            
                            <input type="checkbox" name="RememberMe"/> 
                            保持登录状态
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <input type="hidden" value="@Model.Model.Redirect" name="Redirect"/>
                    <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                </div>
            </div>
        </form>

        <a href="#">忘记密码?</a><br>

    </div>
    <!-- /.login-box-body -->
</div>